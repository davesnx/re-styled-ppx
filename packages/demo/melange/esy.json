{
  "name": "demo-melange",
  "version": "0.0.0",
  "scripts": {
    "start": "concurrently --names re,js,www --kill-others yarn:re:watch yarn:bundle:watch yarn:dev-server",
    "bundle": "esbuild ./src/index.bs.js --outfile=src/bundle.js --bundle --sourcemap --target=chrome58,firefox57,safari11,edge16 --define:process.env.NODE_ENV='\"development\"'",
    "dev-server": "PORT=5000 http-server src -a localhost",
    "bundle:watch": "yarn bundle --watch --color=true",
    "clean": "rm -rf src/bundle.js; yarn run re:clean"
  },
  "dependencies": {
    "@rescript/react": "^0.10.2",
    "bs-css": "^12.2.0",
    "bs-css-emotion": "^2.5.1",
    "bs-platform": "*",
    "concurrently": "^5.3.0",
    "http-server": "^0.12.3",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "reason-react": "^0.9.1"
  },
  "resolutions": {
    "bs-platform": "melange-re/melange#b1d8bb3",
    "ocaml": "melange-re/ocaml#75f22c8"
  },
  "esy": {
    "buildsInSource": "unsafe",
    "build": [
      "ln -sfn #{bs-platform.install} node_modules/bs-platform"
    ]
  },
  "installConfig": {
    "pnp": false
  }
}